<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.1</TargetFramework>
    <PackageTargetFallback>$(PackageTargetFallback);portable-net45+win8+wpa81+wp8</PackageTargetFallback>
    <DebugType>full</DebugType>
    <Description>Prism Autofac Plugin for Xamarin Forms to provide Popup Navigation</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Prism.Autofac.Forms" Version="7.0.0.26-ci" />
    <PackageReference Include="Rg.Plugins.Popup" Version="1.1.0-pre2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../Prism.Plugin.Popups.Shared/**/*.cs">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="..\Prism.Plugin.Popups.Shared\AssemblyInfo-Shared.cs">
      <Link>AssemblyInfo-Shared.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\BackgroundPopupDismissalBehavior.cs">
      <Link>BackgroundPopupDismissalBehavior.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupExtensions.cs">
      <Link>PopupExtensions.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupPageMissingException.cs">
      <Link>PopupPageMissingException.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupPageNavigationServiceBase.cs">
      <Link>PopupPageNavigationServiceBase.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupUtilities.cs">
      <Link>PopupUtilities.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\Extensions\PageExtensions.cs">
      <Link>Extensions\PageExtensions.cs</Link>
    </Compile>
  </ItemGroup>
</Project>